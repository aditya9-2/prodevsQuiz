generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int           @id @default(autoincrement())
  name           String
  email          String        @unique
  password       String
  role           Role?         @default(USER)
  createdGeneres Genre[]       @relation("adminGeneres")
  QuizAttempt    QuizAttempt[]
}

model Genre {
  id      Int    @id @default(autoincrement())
  title   String
  admin   User   @relation("adminGeneres", fields: [adminId], references: [id])
  adminId Int
  Quiz    Quiz[]
}

model Quiz {
  id          Int           @id @default(autoincrement())
  title       String
  genre       Genre         @relation(fields: [genreId], references: [id])
  genreId     Int
  Question    Question[]
  QuizAttempt QuizAttempt[]
}

model Question {
  ind           Int             @id @default(autoincrement())
  quiz          Quiz            @relation(fields: [quizId], references: [id])
  quizId        Int
  questiontext  String
  options       String[]
  correctAnswer String
  AttemptAnswer AttemptAnswer[]
}

model QuizAttempt {
  id            Int             @id @default(autoincrement())
  user          User            @relation(fields: [userId], references: [id])
  userId        Int
  quiz          Quiz            @relation(fields: [quizId], references: [id])
  quizId        Int
  score         Int
  AttemptAnswer AttemptAnswer[]
}

model AttemptAnswer {
  id             Int         @id @default(autoincrement())
  attempt        QuizAttempt @relation(fields: [attemptId], references: [id])
  attemptId      Int
  question       Question    @relation(fields: [questionId], references: [ind])
  questionId     Int
  selectedAnswer String
}

enum Role {
  USER
  ADMIN
}
